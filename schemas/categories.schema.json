{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Mazad Categories",
  "type": "object",
  "required": ["version", "categories"],
  "additionalProperties": false,
  "properties": {
    "version": { "type": "string" },
    "categories": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/definitions/category" }
    }
  },
  "definitions": {
    "category": {
      "type": "object",
      "required": ["slug", "label"],
      "additionalProperties": false,
      "properties": {
        "slug": { "type": "string", "pattern": "^[a-z0-9-]+$" },
        "label": { "type": "string" },
        "description": { "type": "string" },
        "icon": { "type": "string" },
        "featuredFilters": {
          "type": "array",
          "items": { "type": "string" }
        },
        "children": {
          "type": "array",
          "items": { "$ref": "#/definitions/category" }
        }
      }
    }
  }
}
